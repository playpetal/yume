{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/types", "./node_modules/@types"],
    "types": ["node", "./types"]
  },
  "exclude": ["./node_modules", "./tests", "./types"]
}
